<Window x:Class="SyncMoviePlay.MoviePlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncMoviePlay"
        mc:Ignorable="d"
        Title="MoviePlay"
        WindowStyle="None"
        Topmost="True"
        PreviewKeyDown="Window_PreviewKeyDown"
        Closing="Window_Closing"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="23" ResizeBorderThickness="100" />
    </WindowChrome.WindowChrome>
    
    <Grid>
        <MediaElement x:Name="me_movie" Stretch="Fill" Width="auto" Height="auto" LoadedBehavior="Manual" UnloadedBehavior="Manual" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MediaEnded="EndMovie"/>
    </Grid>
</Window>
